<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_launcher"
        android:transitionName="activityTransform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.api.myapplication.view.ClockView
        android:id="@+id/mClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderColor="#b31111"
        app:borderSize="8"
        app:borderType="stroke"
        app:hourColor="#3032c4"
        app:hourSize="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineColor="#3032c4"
        app:minColor="#000"
        app:minSize="3"
        app:secondColor="#b31111"
        app:secondSize="2" />

</androidx.constraintlayout.widget.ConstraintLayout>